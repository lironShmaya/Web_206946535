doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Update User
    link(rel="stylesheet", href="css/css.css")
  body
    .container
      .banner
        h1 Update Password
    br
    br
    .form
      form(action="/update", method="post")
        label Email:  
        input#email(type="email", name="email", placeholder="Enter Your Email")
        br
        br
        label Current Password:  
        input#currentPassword(type="password", name="currentPassword", placeholder="Current Password")
        br
        br
        label New Password:
        input#newPassword(type="password", name="newPassword", placeholder="New Password")
        br
        br
        input(type="submit", value="Update")
